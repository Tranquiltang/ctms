<script type="text/javascript">
    //load data by foreign key
    var tymountid = 0;
    function loadCreateData(data) {
         $("#createwindow").window("open");
         tymountid = 0;
         $('#tymount_form').form('load', data);
             }
    var $createform = $('#tymount_createform');
    // save item
    function createitem() { 
        if ($createform.form('enableValidation').form('validate')) {
            var tymount = $createform.serializeJSON();
                        var token = $('input[name="__RequestVerificationToken"]', $createform).val();
            $.ajax({
                    type: "POST",
                    url: "/TyMounts/CreateAsync",
                    data: {
                        __RequestVerificationToken: token,
                        tymount:tymount
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    if (response.success) {
                        $dg.datagrid('reload');
                        $.messager.alert("提示", "保存成功！","info");
                        $('#createwindow').window("close");
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                        $.messager.alert("异常",   errorThrown,"error");
                    });
        }
    }
    // close window
    function closewindow() {
        $('#createwindow').window('close');
    }
    // print form
