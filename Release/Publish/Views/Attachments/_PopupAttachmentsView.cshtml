﻿@model WebApp.Models.Attachment
<!-- 弹出窗体form表单 -->
<div id="detailswindow" hidden="hidden" class="easyui-window"
     title="明细数据"
     data-options="modal:true,
                    closed:true,
                    maximized:false,
                    iconCls:'icon-more',
                    footer:'#windowfooter',
                    closeDuration:200,
                    closeAnimation:'slide',
                    openDuration:300,
                    openAnimation:'slide',
                    onBeforeClose:function(){
                      var that = $(this);
                      if(hasmodified()){
                        $.messager.confirm('确认','你确定要放弃保存修改的记录?',function(r){
                        if (r){
                          var opts = that.panel('options');
                          var onBeforeClose = opts.onBeforeClose;
                          opts.onBeforeClose = function(){};
                          that.panel('close');
                          opts.onBeforeClose = onBeforeClose;
                        }
                        });
                        return false;
                      }
                    },
                    onOpen:function(){
                       $(this).window('vcenter');
                       $(this).window('hcenter');
                    },
                    onRestore:function(){
                    },
                    onMaximize:function(){
                    }
                    " style="width:1350px;height:520px">
  <!-- begin toolbar -->
  <div class="window-body-toolbar">
    <div class="row">
      <div class="col-sm-8">
        <div class="btn-group btn-group-sm">
          <button onclick="saveitem()" class="btn btn-default">
            <i class="fa fa-floppy-o"></i> @Html.L("Save")
          </button>
        </div>
        <div class="btn-group btn-group-sm" style="display:none">
          <button onclick="todo()" class="btn btn-default">
            <i class="fa fa-print"></i> ToDo
          </button>
        </div>
      </div>
      <div class="col-sm-4 text-align-right">
        <div class="btn-group btn-group-sm">
          <button type="button" class="btn   btn-success" onclick="closewindow()">
            <i class="fa fa-chevron-left"></i>
            @Html.L("Close")
          </button>
        </div>
      </div>
    </div>
  </div>
  <!-- end toolbar -->
  <!-- begin window body -->
  <div class="widget-body">
    <form id="attachment_form"
          class="easyui-form form-horizontal padding-10"
          method="post"
          data-options="novalidate:true,
                            onChange: function(target){
                              hasChanged = false;
                             },
                             onLoadSuccess:function(data){
                               hasChanged = false;
                             }">
      @Html.AntiForgeryToken()
      <!--Primary Key-->
      <input type="hidden" id="@Html.IdFor(model => model.Id)"
             name="@Html.NameFor(model => model.Id)"
             value="@Html.ValueFor(model => model.Id)" />
      <input type="hidden" id="@Html.IdFor(model => model.Long)"
             name="@Html.NameFor(model => model.Long)"
             value="@Html.ValueFor(model => model.Long)" />
      <input type="hidden" id="@Html.IdFor(model => model.Lat)"
             name="@Html.NameFor(model => model.Lat)"
             value="@Html.ValueFor(model => model.Lat)" />
      <input type="hidden" id="@Html.IdFor(model => model.Location)"
             name="@Html.NameFor(model => model.Location)"
             value="@Html.ValueFor(model => model.Location)" />
      <input type="hidden" id="@Html.IdFor(model => model.FileType)"
             name="@Html.NameFor(model => model.FileType)"
             value="@Html.ValueFor(model => model.FileType)" />
      <input type="hidden" id="@Html.IdFor(model => model.FilePath)"
             name="@Html.NameFor(model => model.FilePath)"
             value="@Html.ValueFor(model => model.FilePath)" />
      <input type="hidden" id="@Html.IdFor(model => model.FileName)"
             name="@Html.NameFor(model => model.FileName)"
             value="@Html.ValueFor(model => model.FileName)" />
      <fieldset>
        <div class="form-group-sm">
          <div class="row" style="margin:0px">
            <!--派车单号-->
            <div class="col-3 col-md-3 has-feedback" style="padding:0px;margin:0px">
              <label class="control-label" style="width:30%"><span class="required">@Html.DisplayNameFor(model => model.ShipOrderNo)</span></label>
              <input id="@Html.IdFor(model => model.ShipOrderNo)"
                     name="@Html.NameFor(model => model.ShipOrderNo)"
                     value="@Html.ValueFor(model => model.ShipOrderNo)"
                     tabindex="0" required
                     class="easyui-textbox"
                     style="width:68%"
                     type="text"
                     data-options="prompt:'@Html.DisplayNameFor(model => model.ShipOrderNo)',
								 required:true,
                                 validType: 'length[0,20]'
                                 " />
            </div>
            <!--FWO号-->
            <div class="col-3 col-md-3 has-feedback" style="padding:0px;margin:0px">
              <label class="control-label" style="width:30%"><span class="required">@Html.DisplayNameFor(model => model.TRQ_ID)</span></label>
              <input id="@Html.IdFor(model => model.TRQ_ID)"
                     name="@Html.NameFor(model => model.TRQ_ID)"
                     value="@Html.ValueFor(model => model.TRQ_ID)"
                     tabindex="1" required
                     class="easyui-textbox"
                     style="width:68%"
                     type="text"
                     data-options="prompt:'@Html.DisplayNameFor(model => model.TRQ_ID)',
								 required:true,
                                 validType: 'length[0,20]'
                                 " />
            </div>
            <!--FO号-->
            <div class="col-3 col-md-3 has-feedback" style="padding:0px;margin:0px">
              <label class="control-label" style="width:30%">@Html.DisplayNameFor(model => model.TOR_ID)</label>
              <input id="@Html.IdFor(model => model.TOR_ID)"
                     name="@Html.NameFor(model => model.TOR_ID)"
                     value="@Html.ValueFor(model => model.TOR_ID)"
                     tabindex="2"
                     class="easyui-textbox"
                     style="width:68%"
                     type="text"
                     data-options="prompt:'@Html.DisplayNameFor(model => model.TOR_ID)',
								 required:false,
                                 validType: 'length[0,20]'
                                 " />
            </div>
            <!--上传用户-->
            <div class="col-3 col-md-3 has-feedback" style="padding:0px;margin:0px">
              <label class="control-label" style="width:30%">@Html.DisplayNameFor(model => model.User)</label>
              <input id="@Html.IdFor(model => model.User)"
                     name="@Html.NameFor(model => model.User)"
                     value="@Html.ValueFor(model => model.User)"
                     tabindex="8"
                     class="easyui-textbox"
                     style="width:68%"
                     type="text"
                     data-options="prompt:'@Html.DisplayNameFor(model => model.User)',
								 required:false,
                                 validType: 'length[0,20]'
                                 " />
            </div>

          </div>
          <!--end row-->
          <div class="row" style="margin:0px">
            <!--文件名-->
            <div class="col-3 col-md-3 has-feedback" style="padding:0px;margin:0px">
              <label class="control-label" style="width:30%"><span class="required">上传文件</span></label>
              <input id="upfiles"
                     name="upfiles"
                     value=""
                     accept="application/pdf,image/*",
                     tabindex="3" required
                     class="easyui-filebox"
                     style="width:68%"
                     type="text"
                     data-options="prompt:'上传文件',
								            required:true,multiple:true,
                           accept:'application/pdf,image/*'
                                            " />
            </div>
            <!--备注-->
            <div class="col-3 col-md-3 has-feedback" style="padding:0px;margin:0px">
              <label class="control-label" style="width:30%">@Html.DisplayNameFor(model => model.Comment)</label>
              <input id="@Html.IdFor(model => model.Comment)"
                     name="@Html.NameFor(model => model.Comment)"
                     value="@Html.ValueFor(model => model.Comment)"
                     tabindex="4"
                     class="easyui-textbox"
                     style="width:68%"
                     type="text"
                     data-options="prompt:'@Html.DisplayNameFor(model => model.Comment)',
								 required:false,
                                 validType: 'length[0,50]'
                                 " />
            </div>

            <!--上传日期-->
            <div class="col-3 col-md-3 has-feedback" style="padding:0px;margin:0px">
              <label class="control-label" style="width:30%"><span class="required">@Html.DisplayNameFor(model => model.UploadDateTime)</span></label>
              <input id="@Html.IdFor(model => model.UploadDateTime)"
                     name="@Html.NameFor(model => model.UploadDateTime)"
                     value="@Html.ValueFor(model => model.UploadDateTime)"
                     tabindex="7" required
                     class="easyui-datetimebox"
                     style="width:68%"
                     type="text"
                     data-options="prompt:'@Html.DisplayNameFor(model => model.UploadDateTime)',
								 required:true,
								 formatter:datetimeformatter" />
            </div>
          </div>
          <!--end row-->
          <div class="row" style="margin:0px">


          </div>
          <!--end row-->
        </div>
      </fieldset>
    </form>

    <!--end form表单界面-->
    <!--========================================================================================-->
  </div>
  <!--end window body -->
</div>
<div id="windowfooter" style="padding:5px;">&nbsp;</div>
<!-- 弹出窗体form表单 -->
