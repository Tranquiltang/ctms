<script type="text/javascript">
    //load data by foreign key
    var purchaseorderdetailid = 0;
    function loadData(id,data) {
         $("#detailswindow").window("open");
         purchaseorderdetailid = id;
         $('#purchaseorderdetail_form').form('load', data);
             }
    var $editform = $('#purchaseorderdetail_form');
    // save item
    function saveitem() { 
        if ($editform.form('enableValidation').form('validate')) {
            var purchaseorderdetail = $editform.serializeJSON();
                        var url = '/PurchaseOrderDetails/EditAsync';
            if (purchaseorderdetail.Id <= 0 || purchaseorderdetail.Id === null || purchaseorderdetail.Id === '') {
                url = '/PurchaseOrderDetails/CreateAsync';
            }
            var token = $('input[name="__RequestVerificationToken"]', $editform).val();
            $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        purchaseorderdetail:purchaseorderdetail
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    if (response.success) {
                        $dg.datagrid('reload');
                        $.messager.alert("提示", "保存成功！","info");
                        $('#detailswindow').window("close");
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                        $.messager.alert("异常",   errorThrown,"error");
                    });
        }
    }
    // close window
    function closewindow() {
        $('#detailswindow').window('close');
    }
