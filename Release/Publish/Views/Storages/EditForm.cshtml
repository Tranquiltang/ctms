﻿@model WebApp.Models.Storage
<!-- begin master section -->
<div  class="main-form">
<!--begin storage form  -->
<form id="storage_form" method="post" novalidate="novalidate" >
@Html.AntiForgeryToken()
   @Html.HiddenFor(x=>x.Id)
 <fieldset>
 <div class="form-group form-group-sm">
      <div class="row">

        <!--堆场名称-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.Name)</span> </label>
			@Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Name) } })
      
         </div>

        <!--地址-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Address) </label>
			@Html.EditorFor(x => x.Address, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Address) } })
      
         </div>

        <!--用途-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Use) </label>
			@Html.EditorFor(x => x.Use, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Use) } })
      
         </div>

		
      <!--海关监管-->
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
              <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.Customs)</span> </label>
              <div class="checkbox  no-margin">
              <label>
                 <input id="@Html.IdFor(model => model.Customs)"
                       name="@Html.NameFor(model => model.Customs)"
                       value="true" @(Model.Customs ? "checked=\"checked\"" : "")
                       class="checkbox style-0"
                       tabindex="6"
                       type="checkbox" />
                <span>@Html.DisplayNameFor(model => model.Customs)</span>
              </label>
            </div>
      </div>
	    
   </div>
  </div>
</fieldset>
</form>
<!-- end storage form  -->
</div>

<!-- end master section -->
<!--========================================================================================-->

