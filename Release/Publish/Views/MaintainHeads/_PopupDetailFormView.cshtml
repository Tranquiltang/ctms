<script type="text/javascript">
    //load data by foreign key
    var maintainheadid = 0;
    var orderno = '';
    function loadData(id, data) {
        $("#detailswindow").window("open");
        maintainheadid = id;
        orderno = data.OrderNo;
        $('#maintainhead_form').form('load', data);
        var url = '/MaintainDetails/GetDataByMaintainHeadIdAsync?maintainheadid=' + maintainheadid;
        $maintaindetailsdg.datagrid('load', url);
        $maintaindetailsdg.datagrid('resize');
    }
    var $editform = $('#maintainhead_form');
    // save item
    function saveitem() {
        if ($editform.form('enableValidation').form('validate')) {
            var maintainhead = $editform.serializeJSON();
            //获取明细表数据

            if (!maintaindetails_endEditing())
                return false;
            var maintaindetails = $maintaindetailsdg.datagrid("getChanges");
            maintainhead.MaintainDetails = maintaindetails;
            var url = '/MaintainHeads/EditAsync';
            if (maintainhead.Id <= 0 || maintainhead.Id === null || maintainhead.Id === '') {
                url = '/MaintainHeads/CreateAsync';
            }
            var token = $('input[name="__RequestVerificationToken"]', $editform).val();
            $.ajax({
                type: "POST",
                url: url,
                data: {
                    __RequestVerificationToken: token,
                    maintainhead: maintainhead
                },
                dataType: 'json',
                contentType: 'application/x-www-form-urlencoded; charset=utf-8'
            })
                .done(response => {
                    if (response.success) {
                        $dg.datagrid('reload');
                        $.messager.alert("提示", "保存成功！", "info");
                        $('#detailswindow').window("close");
                    } else {
                        $.messager.alert("错误", response.err, "error");
                    }
                })
                .fail((jqXHR, textStatus, errorThrown) => {
                    $.messager.alert("异常", errorThrown, "error");
                });
        }
    }
    // close window
    function closewindow() {
        $('#detailswindow').window('close');
    }
    // print form
    function printitem() {
        console.log('print.....');
    }

    $('a[data-toggle="tab"]').on('shown.bs.tab', e => {
        var target = $(e.target).attr("href");
        if (target === "#tab-maintaindetails")
            $maintaindetailsdg.datagrid("resize");
    });

</script>


