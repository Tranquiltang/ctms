                       tabindex="16"
                       class="easyui-filebox"
                       style="width:68%"
                       type="text"
                       data-options="prompt:'@Html.DisplayNameFor(model => model.PhotoPath)',
								 required:false,
                                 validType: 'length[0,120]'
                                 " />
              </div>
            </div>
            <!--end row-->
          </div>
        </fieldset>
      </form>

<!--end form表单界面-->
<!--========================================================================================-->
     </div>
    <!--end window body -->
</div>
<div id="windowfooter" style="padding:5px;">&nbsp;</div>
