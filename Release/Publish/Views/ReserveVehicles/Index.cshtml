                          type:'textbox',
                          options:{ prompt:'@Html.DisplayNameFor(model => model.PlateNumber1)',required:true ,validType:'length[0,10]'  }  
                       },
                 sortable:true,
                 resizable:true 
			},
			{
                 field:'Address', 
                 title:'@Html.DisplayNameFor(model => model.Address)', 
                 width:260,
