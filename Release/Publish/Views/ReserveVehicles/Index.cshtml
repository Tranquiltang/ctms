<script type="text/javascript">
    //load data by key
    var MODELSTATE = 'Added';
    var reservevehicleid = 0;
    function loadData(id,data,state) {
         MODELSTATE = state;
         $("#detailswindow").window("open");
         reservevehicleid = id;
         $('#reservevehicle_form').form('load', data);
             }
    var $editform = $('#reservevehicle_form');
    // save item
    function saveitem() { 
        if ($editform.form('enableValidation').form('validate')) {
            var reservevehicle = $editform.serializeJSON();
                        var url = '/ReserveVehicles/EditAsync';
            //判断是新增或是修改方法
            if (MODELSTATE === 'Added') {
                url = '/ReserveVehicles/CreateAsync';
            }
            var token = $('input[name="__RequestVerificationToken"]', $editform).val();
            $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        reservevehicle:reservevehicle
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    if (response.success) {
                        $editform.form('disableValidation');
                        $dg.datagrid('reload');
                        $('#detailswindow').window("close");
                        toastr.success("保存成功", "确认", { timeOut:2000 });  
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                        $.messager.alert("失败",   errorThrown,"error");
                    });
        }
    }
    // close window
    function closewindow() {
        $('#detailswindow').window('close');
    }
