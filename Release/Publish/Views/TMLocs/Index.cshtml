                          options:{ prompt:'@Html.DisplayNameFor(model => model.Partner)',required:false ,validType:'length[0,10]'  }  
                       },
                 sortable:true,
                 resizable:true 
			},
                 ]]
           });

           $dg.datagrid("enableFilter",[
				{
					  field: "Id",
					  type: "numberbox",
					  op:['equal','notequal','less','lessorequal','greater','greaterorequal']
				  },
		   ]);
	 });
</script>
